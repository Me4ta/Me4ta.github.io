<div class="row dbg-outline">
    <div class="col-sm-offset-4 col-sm-4 col-md-4 col-lg-3">
        {{outlet}}
        <div class="input-group input-group-lg">
          {{input-with-on-change class="form-control input-code" type="text" maxlength="4" value=code
          placeholder="#code" onInputChange="onInputChange" startedTyping="startedTyping"}}
            <span class="input-group-btn">
              <button {{bind-attr class=":btn :btn-success"}}
                      type="submit" {{action 'submitCode'}}>Next
              </button>
            </span>
        </div>
    </div>
</div>
