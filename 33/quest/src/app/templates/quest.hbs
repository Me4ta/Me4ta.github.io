<div class="quest-content">
    <nav class="left-sidebar">
        left sidebar
    </nav>
    <div class="content-wrapper">
        <div class="row level-content" style="background-color: lightpink;">
            <div class="col-sm-12">
                level content
              {{outlet}}
            </div>
        </div>
        <div class="row next-level-controls" style="background-color: lightyellow;">
            <div class="col-sm-offset-3 col-sm-6 col-md-6 col-lg-offset-4 col-lg-3">
                <div>button content</div>
                <div class="input-group input-group-lg code">
                    <div class="input-group-addon">#</div>
                  {{input-with-on-change class="form-control" type="text" maxlength="4" value=code
                  placeholder="code" onInputChange="onInputChange" startedTyping="startedTyping"}}
                    <span class="input-group-btn">
              <button {{bind-attr class=":btn :btn-success"}}
                      type="submit" {{action 'submitCode'}}>Next
              </button>
            </span>
                </div>
            </div>
        </div>
    </div>

</div>
